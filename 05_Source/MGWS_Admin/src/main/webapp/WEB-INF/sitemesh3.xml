<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.jsp”所装饰 -->
	<mapping path="/*" decorator="/WEB-INF/views/decorators/decorator.jsp" />

	<!-- 指明满足条件的页面，将被排除，不被装饰 -->
	<mapping path="/login" exclue="true" />
	<mapping path="/logout" exclue="true" />
	
	<content-processor>
		<tag-rule-bundle class="com.org.mgws.base.sitemeshtag.MyTagRuleBundle" />
	</content-processor>
</sitemesh>